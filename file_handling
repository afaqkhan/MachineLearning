#program to count number of capital letters from a file and output the result into another file
fh = open('C:/Users/Afaq/Documents/Test/newfile.txt','r')
filetext= fh.read()
count=0
for x in filetext:
	if x.isupper():
		count = count+1
outfile = open('C:/Users/Afaq/Documents/Test/result.txt','w')
outfile.write(str(count))
outfile.close()
fh.close()






